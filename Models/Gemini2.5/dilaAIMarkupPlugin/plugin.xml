<!DOCTYPE plugin PUBLIC "-//Oxygen Plugin" "../plugin.dtd">
<plugin 
    id="com.dila.ai.markup"
    name="DILA AI Markup"
    version="0.2.0"
    vendor="DILA"
    class="ro.sync.exml.plugin.Plugin" 
    classLoaderType="preferReferencedResources">

    <description>
            <p>This plugin provides an AI-empowered markup assistant for editing TEI XML documents.</p>
            <h4>Release Notes v0.2.0:</h4>
            <ul>
                <li>multi-language support (English, Simplified Chinese)</li>
                <li>Preferences page for setting LLM ft models and API key</li>
            </ul>
            <h4>Release Notes v0.1.0:</h4>
            <ul>
                <li>AI-driven markup for unmarked references</li>
                <li>TEI tag removal</li>
            </ul>
    </description>
    
    <extension 
        type="WorkspaceAccessJS" 
        href="dila-ai-markup.js"/>
   
    <view 
        id="dila.ai.markup.view"
        initialSide="WEST"
        initialState="docked"/>

    <!-- <license>dila-license.txt</license> -->

</plugin>