<?xml version="1.0" encoding="UTF-8"?>
<!-- The plugin.dtd file is located in the OXYGEN_INSATALL_DIR/plugins directory -->
<!DOCTYPE plugin SYSTEM "../plugin.dtd">

<plugin
    id="com.oxygenxml.plugin.DuplicateLine"
    name="Duplicate Line"
    description="Duplicates the current line"
    version="${project.nosnapshot.version}"
    vendor="Syncro Soft"
    class="ro.sync.sample.plugin.duplicateLine.DuplicateLinePlugin"
    classLoaderType="preferReferencedResources">
    <runtime>
        <library name="lib/${project.build.finalName}.jar"/>
    </runtime>
    <extension type="documentProcessor" 
    	class="ro.sync.sample.plugin.duplicateLine.DuplicateLineUpPluginExtension" keyboardShortcut="M1 alt UP" actionName="Duplicate Line Up"/>
    <extension type="documentProcessor" 
    	class="ro.sync.sample.plugin.duplicateLine.DuplicateLineDownPluginExtension" keyboardShortcut="M1 alt DOWN" actionName="Duplicate Line Down"/>
</plugin>
