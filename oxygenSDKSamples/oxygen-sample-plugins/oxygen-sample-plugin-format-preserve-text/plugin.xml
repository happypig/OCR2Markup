<?xml version="1.0" encoding="UTF-8"?>
<!-- The plugin.dtd file is located in the OXYGEN_INSATALL_DIR/plugins directory -->
<!DOCTYPE plugin SYSTEM "../plugin.dtd">


<plugin
    id="com.oxygenxml.plugin.FormatPreserveText"
    name="Format with text preserve"
    description="Formats keeping the text nodes intact"
    version="${project.nosnapshot.version}"
    vendor="Syncro Soft"
    class="dila.formatpreserve.FormatPreserveTextPlugin"
    classLoaderType="preferReferencedResources">
    <runtime>
        <library name="lib/${project.build.finalName}.jar"/>
    </runtime>
    <extension type="selectionProcessor" 
        class="dila.formatpreserve.FormatPreserveTextPluginExtension"/>
</plugin>
